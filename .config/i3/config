#Taking Screenshots

# Full screen screenshot
bindsym Ctrl+Print exec shutter -f -o ~/Pictures/screenshot_$(date +%Y-%m-%d_%H-%M-%S).png | xclip -selection clipboard -t image/png
# Active window screenshot
bindsym Ctrl+Shift+Print exec shutter -w -o ~/Pictures/screenshot_$(date +%Y-%m-%d_%H-%M-%S).png | xclip -selection clipboard -t image/png
# Select area screenshot
bindsym Print exec shutter -s -o ~/Pictures/screenshot_$(date +%Y-%m-%d_%H-%M-%S).png | xclip -selection clipboard -t image/png

# kill any hanging polybar processes 
exec_always killall polybar
exec_always --no-startup-id ~/.config/polybar/launch_polybar.sh

